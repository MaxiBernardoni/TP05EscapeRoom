<style>
.barrio-container {
    max-width: 800px;
    margin: 60px auto 0 auto;
    background: #181818;
    border-radius: 16px;
    box-shadow: 0 0 24px #000a;
    padding: 32px 24px 24px 24px;
    color: #fff;
    font-family: 'Segoe UI', sans-serif;
    position: relative;
}
.barrio-title {
    font-size: 1.5em;
    margin-bottom: 18px;
    text-align: center;
}
.npc-row {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    justify-items: center;
    align-items: start;
    gap: 60px 60px;
    margin-bottom: 30px;
    padding: 45px;
}
.npc {
    display: flex;
    flex-direction: column-reverse;
    align-items: center;
    cursor: pointer;
    position: relative;
}
.npc img {
    width: 110px;
    height: 110px;
    border-radius: 50%;
    border: 3px solid #00eaff;
    background: #fff;
    border: none !important;
}
.npc-comment {
    margin-bottom: 10px;
    font-size: 1em;
    color: #222;
    min-height: 24px;
    text-align: center;
    position: absolute;
    bottom: 100%;
    background: #fff;
    padding: 10px 16px;
    border-radius: 10px;
    display: none;
    z-index: 100;
    width: 220px;
    left: 50%;
    transform: translateX(-50%);
    box-shadow: 0 2px 8px rgba(0,0,0,0.2);
    border: 1px solid #00eaff;
    font-weight: 500;
}
.npc:hover .npc-comment {
    display: block;
}
.npc-row a:focus, .npc-row a:active {
    outline: none !important;
    box-shadow: none !important;
    background: none !important;
}
.npc-row a {
    border-radius: 50%;
    display: inline-block;
    transition: box-shadow 0.3s;
}
</style>

