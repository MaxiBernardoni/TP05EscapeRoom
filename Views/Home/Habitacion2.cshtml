@{
    ViewData["Title"] = "Habitaci√≥n 2";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int totalSeconds = ViewBag.GameSeconds ?? 0;
}

<style>
    .pipe-puzzle-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 40px;
    }
    .pipe-grid {
        display: grid;
        grid-template-columns: repeat(7, 64px);
        grid-template-rows: repeat(7, 64px);
        gap: 2px;
        background: #222;
        border-radius: 10px;
        box-shadow: 0 0 10px #00eaff88;
        width: 456px;
        height: 456px;
        margin: 0 auto;
    }
    .pipe-piece {
        width: 64px;
        height: 64px;
        cursor: pointer;
        transition: transform 0.2s;
        user-select: none;
    }
    .pipe-piece.locked {
        opacity: 0.5;
        cursor: not-allowed;
    }
    .pipe-puzzle-btns {
        margin-top: 20px;
    }
    .pipe-puzzle-btns button {
        margin: 0 10px;
        padding: 8px 20px;
        font-size: 1em;
        border-radius: 5px;
        border: none;
        background: #00eaff;
        color: #222;
        font-weight: bold;
        cursor: pointer;
        transition: background 0.2s;
    }
    .pipe-puzzle-btns button:hover {
        background: #00b8c6;
    }
    .pipe-puzzle-message {
        margin-top: 20px;
        font-size: 1.2em;
        color: #ff3c3c;
        font-weight: bold;
    }
    .pipe-puzzle-message.success {
        color: #4caf50 !important;
    }
    .emoji-row {
        width: 456px;
        display: flex;
        justify-content: space-between;
        margin-bottom: 2px;
        margin-top: 2px;
        margin-left: auto;
        margin-right: auto;
    }
</style>

<div class="pipe-puzzle-container">
    <h2>¬°Conecta el camino del colectivo a la oficina!</h2>
    <div class="emoji-row">
        <span style="font-size: 2em; visibility: hidden;">x</span>
        <span style="font-size: 2em;">üíº</span>
    </div>
    <div id="pipeGrid" class="pipe-grid"></div>
    <div class="emoji-row">
        <span style="font-size: 2em;">üè†</span>
        <span style="font-size: 2em; visibility: hidden;">x</span>
    </div>
    <div class="pipe-puzzle-btns">
        <button onclick="reiniciarPuzzle()">Reiniciar</button>
        <button onclick="verificarPuzzle()">Verificar</button>
    </div>
    <div id="puzzleMessage" class="pipe-puzzle-message"></div>
</div>

<script src="/js/pipepuzzle.js"></script>
