<style>
.dialogo-chat-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    min-height: 100vh;
    z-index: 1000;
    background: rgba(0, 0, 0, 0.8);
}
.dialogo-chat-imgs {
    display: flex;
    justify-content: center;
    gap: 60px;
    width: 100%;
    margin-bottom: 18px;
}
#chat-burbujas {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 600px;
    width: 100%;
    margin: 0 auto;
    margin-bottom: 10px;
}
.burbuja-chat {
    display: none;
    max-width: 600px;
    margin-bottom: 12px;
    padding: 18px 28px;
    border-radius: 22px;
    font-size: 1.13em;
    font-family: 'Fira Code', 'JetBrains Mono', 'Consolas', monospace;
    box-shadow: 0 4px 24px #0006;
    opacity: 0;
    transform: translateY(30px) scale(0.98);
    transition: opacity 0.6s cubic-bezier(.4,0,.2,1), transform 0.6s cubic-bezier(.4,0,.2,1);
    text-align: center;
}
.burbuja-chat.visible {
    display: block !important;
    opacity: 1;
    transform: translateY(0) scale(1);
}
.burbuja-usuario {
    align-self: flex-end;
    background: linear-gradient(90deg, #00c9a7 0%, #005c4b 100%);
    color: #fff;
}
.burbuja-ayudar {
    align-self: flex-start;
    background: linear-gradient(90deg, #3a1c71 0%, #d76d77 100%);
    color: #fff;
}
.burbuja-narrador {
    align-self: center;
    background: #444;
    color: #eee;
    font-style: italic;
}
.burbuja-chat img {
    width: 90px;
    height: 90px;
    border-radius: 50%;
    border: 3px solid #00ffc3;
    box-shadow: 0 0 16px 4px #00ffc3, 0 0 32px 8px #00ffc355;
    animation: neonPulse 2s infinite alternate;
    background: #222;
}
@@keyframes neonPulse {
    0% { box-shadow: 0 0 16px 4px #00ffc3, 0 0 32px 8px #00ffc355; }
    100% { box-shadow: 0 0 32px 8px #00ffc3, 0 0 48px 16px #00ffc355; }
}
#typing-indicator {
    display: none;
    text-align: left;
    padding: 10px 0 10px 20px;
    width: 100%;
}
.dot {
    display: inline-block;
    width: 10px; height: 10px;
    margin-right: 3px;
    background: #fff;
    border-radius: 50%;
    opacity: 0.5;
    animation: blink 1.2s infinite both;
}
.dot:nth-child(2) { animation-delay: 0.2s; }
.dot:nth-child(3) { animation-delay: 0.4s; }
@@keyframes blink {
    0%, 80%, 100% { opacity: 0.5; }
    40% { opacity: 1; }
}
.pistolita-panel {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30px;
    background: #181818;
    border-radius: 18px;
    box-shadow: 0 2px 16px #0008;
    padding: 24px 32px;
    min-width: 320px;
}
.pistolita-acciones {
    display: flex;
    gap: 30px;
    margin-top: 18px;
}
.pistolita-btn {
    font-size: 2.2em;
    border: none;
    background: none;
    cursor: pointer;
    transition: transform 0.15s;
    border-radius: 50%;
    width: 64px;
    height: 64px;
    box-shadow: 0 2px 12px #0005;
    outline: none;
}
.pistolita-btn:active {
    transform: scale(1.15);
    box-shadow: 0 0 24px #00ffc3;
}
.pistolita-info {
    margin-top: 10px;
    color: #00ffc3;
    font-family: 'Fira Code', 'JetBrains Mono', monospace;
    font-size: 1.1em;
}
.pistolita-anim {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 40px;
    margin-top: 18px;
    min-height: 60px;
}
.pistolita-emoji {
    font-size: 2.5em;
    transition: transform 0.4s cubic-bezier(.4,0,.2,1);
}
.pistolita-emoji.disparo {
    animation: disparo 0.5s linear;
}
.pistolita-emoji.escudo {
    animation: escudo 0.5s linear;
}
.pistolita-emoji.recarga {
    animation: recarga 0.7s linear;
}
@@keyframes disparo {
    0% { transform: translateX(0); }
    60% { transform: translateX(40px) scale(1.2); }
    100% { transform: translateX(0); }
}
@@keyframes escudo {
    0% { transform: scale(1); }
    50% { transform: scale(1.25) rotate(-10deg); }
    100% { transform: scale(1); }
}
@@keyframes recarga {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}
</style>
<div class="dialogo-chat-container">
    <div class="dialogo-chat-imgs">
        <img src="/img/usuario.png" alt="Usuario" />
        <img src="/img/pistolita.png" alt="El que ayuda" />
    </div>
    <div id="chat-burbujas" style="max-height: 400px; overflow-y: auto; width:100%;">
        <div id="typing-indicator"><span class="dot"></span><span class="dot"></span><span class="dot"></span></div>
        <!-- Di√°logo inicial, minijuego y resultado se renderizan aqu√≠ con JS -->
    </div>
    <div id="pistolita-panel" class="pistolita-panel" style="display:none;">
        <div class="pistolita-info" id="pistolita-info"></div>
        <div class="pistolita-acciones">
            <button class="pistolita-btn" id="btn-disparo" title="Disparar">üî´</button>
            <button class="pistolita-btn" id="btn-escudo" title="Escudo">üõ°Ô∏è</button>
            <button class="pistolita-btn" id="btn-recarga" title="Recargar">üîÑ</button>
        </div>
        <div class="pistolita-anim" id="pistolita-anim"></div>
    </div>
    <button id="btn-avanzar" class="btn btn-primary" style="margin-top:10px;">Avanzar</button>
    <div class="btn-container" id="btn-reiniciar-pistolita" style="display:none;">
        <form asp-action="DialogoAyudar2" method="get" style="display:inline;">
            <button type="submit" class="btn btn-danger">Reiniciar minijuego</button>
        </form>
    </div>
    <div class="btn-container" id="btn-volver-hab3" style="display:none;">
        <a href="/Home/Habitacion3" class="btn btn-secondary">Volver a la habitaci√≥n</a>
    </div>
</div>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const burbujas = document.querySelectorAll('.burbuja-chat');
    let i = 0;
    const btnAvanzar = document.getElementById('btn-avanzar');
    const chatBurbujas = document.getElementById('chat-burbujas');
    const typing = document.getElementById('typing-indicator');
    function scrollToBottom() {
        chatBurbujas.scrollTop = chatBurbujas.scrollHeight;
    }
    function mostrarBurbujaAnimada(idx) {
        typing.style.display = 'block';
        setTimeout(() => {
            typing.style.display = 'none';
            if (burbujas[idx]) {
                burbujas[idx].style.display = 'block';
                setTimeout(() => {
                    burbujas[idx].classList.add('visible');
                    scrollToBottom();
                }, 10);
            }
        }, 700);
    }
    // Mostrar el primer mensaje al cargar
    burbujas[0].style.display = 'block';
    i = 1;
    btnAvanzar.style.display = 'block';
    scrollToBottom();
    btnAvanzar.onclick = function() {
        btnAvanzar.style.display = 'none';
        function mostrarBurbujasSecuencial() {
            if (i < burbujas.length) {
                mostrarBurbujaAnimada(i);
                i++;
                setTimeout(mostrarBurbujasSecuencial, 2000);
            }
        }
        if (burbujas.length > 0) {
            mostrarBurbujasSecuencial();
        }
    };
});
</script>
