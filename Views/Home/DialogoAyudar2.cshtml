<script>
// Utilidades para burbujas y typing
function crearBurbuja(texto, clase) {
    const div = document.createElement('div');
    div.className = 'burbuja-chat ' + clase;
    div.innerText = texto;
    return div;
}
function mostrarBurbujaSecuencial(burbujas, callback) {
    const chat = document.getElementById('chat-burbujas');
    const typing = document.getElementById('typing-indicator');
    let i = 0;
    function next() {
        if (i < burbujas.length) {
            typing.style.display = 'block';
            setTimeout(() => {
                typing.style.display = 'none';
                chat.appendChild(burbujas[i]);
                setTimeout(() => {
                    burbujas[i].classList.add('visible');
                    chat.scrollTop = chat.scrollHeight;
                    i++;
                    setTimeout(next, 900 + Math.random()*400);
                }, 10);
            }, 700);
        } else if (callback) {
            callback();
        }
    }
    next();
}

// Flujo principal
window.addEventListener('DOMContentLoaded', function() {
    const chat = document.getElementById('chat-burbujas');
    const typing = document.getElementById('typing-indicator');
    const pistolitaPanel = document.getElementById('pistolita-panel');
    const btnReiniciar = document.getElementById('btn-reiniciar-pistolita');
    const btnVolver = document.getElementById('btn-volver-hab3');

    // Limpia el chat
    chat.innerHTML = '<div id="typing-indicator"><span class="dot"></span><span class="dot"></span><span class="dot"></span></div>';

    // Si ya gan√≥ antes
    if (@(yaGano.ToString().ToLower()) && !@(enJuego.ToString().ToLower())) {
        const burb = crearBurbuja('¬øQu√© hac√©s de vuelta? ¬øNo te alcanz√≥ una partida de pistolita?', 'burbuja-ayudar');
        chat.appendChild(burb);
        setTimeout(()=>burb.classList.add('visible'), 100);
        pistolitaPanel.style.display = 'none';
        btnReiniciar.style.display = 'none';
        btnVolver.style.display = 'block';
        return;
    }

    // Si perdi√≥
    if (@(yaPerdio.ToString().ToLower())) {
        const secuencia = [
            crearBurbuja('Na, amigo. Dale, decime igual.', 'burbuja-usuario'),
            crearBurbuja('Jajaja no. Me hubieras ganado, capo. Ahora reinici√° el juego.', 'burbuja-ayudar')
        ];
        mostrarBurbujaSecuencial(secuencia, function() {
            pistolitaPanel.style.display = 'none';
