@{
    ViewData["Title"] = "Diálogo con el Insistente";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var modelo = ViewBag.Modelo as TuProyecto.Models.Habitacion3Model;
    int totalSeconds = ViewBag.GameSeconds ?? 0;
}

<style>
    .dialogo-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 20px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }
    .mensaje {
        margin: 20px 0;
        padding: 15px;
        border-radius: 8px;
        display: flex;
        align-items: flex-start;
        gap: 15px;
    }
    .mensaje.usuario {
        background: #e3f2fd;
        margin-left: 50px;
        flex-direction: row-reverse;
    }
    .mensaje.npc {
        background: #f5f5f5;
        margin-right: 50px;
    }
    .mensaje-contenido {
        flex: 1;
    }
    .avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        border: 2px solid #222;
        box-shadow: 0 0 8px rgba(0,0,0,0.2);
    }
    .avatar.usuario {
        border-color: #00eaff;
    }
    .avatar.npc {
        border-color: #ff9800;
    }
    .opciones {
        display: flex;
        gap: 20px;
        justify-content: center;
        margin-top: 40px;
    }
    .opcion-btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1em;
        transition: background 0.2s;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    .opcion-btn img {
        width: 24px;
        height: 24px;
    }
    .opcion-btn.comprar {
        background: #4CAF50;
        color: white;
    }
    .opcion-btn.rechazar {
        background: #f44336;
        color: white;
    }
    .opcion-btn:hover {
        opacity: 0.9;
    }
    #global-timer {
        position: fixed;
        top: 10px;
        left: 10px;
        font-size: 20px;
        font-family: 'Courier New', monospace;
        color: #ff3c3c;
        z-index: 9999;
        background: black;
        padding: 5px 10px;
        border-radius: 5px;
    }
    @@keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-10px); }
        75% { transform: translateX(10px); }
    }
</style>

<div id="global-timer"></div>

<div class="dialogo-container">
    <div class="mensaje npc">
        <img src="/img/kiosquero.png" alt="Insistente" class="avatar npc">
        <div class="mensaje-contenido">
            Hola estimado. Conozco ese edificio y puedo decirte dónde está. Pero primero, hazme el favor y cómprame algo.
        </div>
    </div>

    @if (!modelo.CompraRealizada && !modelo.InsistenteRechazado)
    {
        <div class="mensaje usuario">
            <img src="/img/usuario.png" alt="Usuario" class="avatar usuario">
            <div class="mensaje-contenido">
                @if (modelo.IntentosRechazo == 0)
                {
                    <text>¿Me podrías decir dónde se encuentra el edificio de Auraman?</text>
                }
                else if (modelo.IntentosRechazo == 1)
                {
                    <text>Estoy apurado amigo. No me podés decir ahora dónde queda el edificio, mañana te compro algo.</text>
                }
                else
                {
                    <text>Que me amenazas? Cálmate un poco flaco, solo te pedí ayuda.</text>
                }
            </div>
        </div>

        <div class="mensaje npc">
            <img src="/img/kiosquero.png" alt="Insistente" class="avatar npc">
            <div class="mensaje-contenido">
                @if (modelo.IntentosRechazo == 0)
                {
                    <text>Dale amigo, no me hagas esto. Vení y acompañame a mi kiosco.</text>
                }
                else if (modelo.IntentosRechazo == 1)
                {
                    <text>Bueno, última oportunidad. ¿Venís a comprarme algo o no? Mirá que un compañerito que tengo en el bolsillo se va a poner muy contento.</text>
                }
                else
                {
                    <text>Así son las cosas. Comprame o no te digo.</text>
                }
            </div>
        </div>

        <div class="opciones">
            @if (modelo.TienePlata)
            {
                <form method="post" action="/Home/DialogoInsistente">
                    <input type="hidden" name="accion" value="comprar" />
                    <button type="submit" class="opcion-btn comprar">
                        <img src="/img/dinero.png" alt="Dinero">
                        Bueno, vamos
                    </button>
                </form>
            }
            <form method="post" action="/Home/DialogoInsistente">
                <input type="hidden" name="accion" value="rechazar" />
                <button type="submit" class="opcion-btn rechazar">
                    <img src="/img/rechazar.png" alt="Rechazar">
                    No, gracias
                </button>
            </form>
        </div>
    }
    else if (modelo.CompraRealizada)
    {
        <div class="mensaje npc">
            <img src="/img/kiosquero.png" alt="Insistente" class="avatar npc">
            <div class="mensaje-contenido">
                Jajaja, no sé dónde está amigo. Averigualo vos.
            </div>
        </div>
        <div class="mensaje usuario">
            <img src="/img/usuario.png" alt="Usuario" class="avatar usuario">
            <div class="mensaje-contenido">
                Na. Sos un ratón eh. No te compra más nadie.
            </div>
        </div>
        <div class="opciones">
            <form method="post" action="/Home/Habitacion3">
                <button type="submit" class="opcion-btn rechazar">
                    <img src="/img/volver.png" alt="Volver">
                    Volver
                </button>
            </form>
        </div>
    }
    else if (modelo.InsistenteRechazado)
    {
        <div class="mensaje npc">
            <img src="/img/kiosquero.png" alt="Insistente" class="avatar npc">
            <div class="mensaje-contenido">
                Listo amigo. Suerte buscando, no lo encontrás más.
            </div>
        </div>
        <div class="mensaje usuario">
            <img src="/img/usuario.png" alt="Usuario" class="avatar usuario">
            <div class="mensaje-contenido">
                Chau. Gracias por nada.
            </div>
        </div>
        <div class="opciones">
            <form method="post" action="/Home/Habitacion3">
                <button type="submit" class="opcion-btn rechazar">
                    <img src="/img/volver.png" alt="Volver">
                    Volver
                </button>
            </form>
        </div>
    }
</div>

<script>
    let totalSeconds = @totalSeconds;
    
    function iniciarReloj() {
        const global = document.getElementById("global-timer");
        function actualizar() {
            totalSeconds++;
            const totalMin = 60 * 8 + Math.floor(totalSeconds / 60);
            const horas = Math.floor(totalMin / 60).toString().padStart(2, '0');
            const mins = (totalMin % 60).toString().padStart(2, '0');
            const segs = (totalSeconds % 60).toString().padStart(2, '0');
            global.innerText = `${horas}:${mins}:${segs}`;
            fetch(`/home/updateclock?seconds=${totalSeconds}`);
        }
        actualizar();
        setInterval(actualizar, 1000);
    }

    iniciarReloj();
</script> 