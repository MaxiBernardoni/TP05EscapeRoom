        });
        return;
    }

    // Si gan√≥
    if (@(yaGano.ToString().ToLower()) && !@(enJuego.ToString().ToLower())) {
        const secuencia = [
            crearBurbuja('Listo. Te gan√©.', 'burbuja-usuario'),
            crearBurbuja('Muy bien. El edificio es para all√°. A 3 cuadras, ni m√°s ni menos.', 'burbuja-ayudar'),
            crearBurbuja('Upa. Gracias amigo.', 'burbuja-usuario'),
            crearBurbuja('Denada pa.', 'burbuja-ayudar')
        ];
        mostrarBurbujaSecuencial(secuencia, function() {
            pistolitaPanel.style.display = 'none';
            btnReiniciar.style.display = 'none';
            btnVolver.style.display = 'block';
        });
        return;
    }

    // Di√°logo inicial antes del minijuego
    const secuencia = [
        crearBurbuja('Buenas, ¬øc√≥mo and√°s? ¬øSab√©s d√≥nde est√° el edificio de Auraman?', 'burbuja-usuario'),
        crearBurbuja('S√≠ pa, obvio.', 'burbuja-ayudar'),
        crearBurbuja('Uyyy qu√© bueno. ¬øMe dec√≠s?', 'burbuja-usuario'),
        crearBurbuja('No es tan f√°cil.', 'burbuja-ayudar'),
        crearBurbuja('Me imagino, debe quedar algo lejos y escondido.', 'burbuja-usuario'),
        crearBurbuja('No es por eso.', 'burbuja-ayudar'),
        crearBurbuja('¬øY por qu√© es?', 'burbuja-usuario'),
        crearBurbuja('Porque para que te diga, me ten√©s que ganar en pistolita.', 'burbuja-ayudar'),
        crearBurbuja('Mandale sopa.', 'burbuja-usuario')
    ];
    mostrarBurbujaSecuencial(secuencia, function() {
